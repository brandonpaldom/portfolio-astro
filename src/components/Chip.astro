---
interface Props {
  icon?: boolean;
  color?: "chip-primary" | "chip-secondary" | "chip-outline";
  label: string;
  class?: string;
}

const { color = "chip-primary", icon, label, class: className } = Astro.props;
---

<div class:list={["flex items-center gap-1.5 chip", color, className]}>
  {
    icon && (
      <div class="-ml-1.5">
        <slot />
      </div>
    )
  }
  <span>{label}</span>
</div>
