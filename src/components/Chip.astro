---
interface Props {
  icon?: boolean;
  color?: "chip-primary" | "chip-secondary" | "chip-outline";
  label: string;
  class?: string;
}

const { color = "chip-primary", icon, label, class: className } = Astro.props;
---

<div class:list={["chip flex items-center", color, className]}>
  {
    icon && (
      <span class="-ml-1.5 mr-1.5">
        <slot />
      </span>
    )
  }
  <span>{label}</span>
</div>
