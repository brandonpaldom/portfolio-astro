---
import TerminalIcon from "@assets/TerminalIcon.astro";

interface Props {
  title: string;
  description: string;
  variant?: "default" | "error";
}

const { title, description, variant = "default" } = Astro.props;
---

<div
  class:list={[
    "flex items-start gap-4 rounded-lg border p-4 shadow-lg",
    variant === "default" && "border-neutral-800 bg-neutral-800",
    variant === "error" && "border-red-500/15 bg-red-500/10 text-red-300",
  ]}
>
  <TerminalIcon />
  <div>
    <p class="font-semibold">{title}</p>
    <p class="text-sm">{description}</p>
  </div>
</div>
