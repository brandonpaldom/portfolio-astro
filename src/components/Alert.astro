---
import TerminalIcon from "../assets/TerminalIcon.astro";

interface Props {
  title: string;
  description: string;
  variant?: "default" | "error";
}

const { title, description, variant = "default" } = Astro.props;
---

<div
  class:list={[
    "border p-4 rounded-lg flex gap-4 items-start shadow-lg",
    variant === "default" && "bg-neutral-800 border-neutral-800",
    variant === "error" && "bg-red-500/10 text-red-300 border-red-500/15",
  ]}
>
  <TerminalIcon />
  <div>
    <h2 class="font-semibold">{title}</h2>
    <p class="text-sm">{description}</p>
  </div>
</div>
