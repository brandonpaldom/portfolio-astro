---
import Card from "./Card.astro";

const { pathname } = Astro.url;
---

<Card class="items-center gap-2">
  <a
    href="/"
    class:list={[
      "btn",
      pathname === "/" || pathname.includes("projects")
        ? "btn-primary"
        : "btn-secondary",
    ]}>Portafolio</a
  >
  <a
    href="/resume"
    class:list={[
      "btn",
      pathname.includes("resume") ? "btn-primary" : "btn-secondary",
    ]}>Curr√≠culum</a
  >
</Card>
