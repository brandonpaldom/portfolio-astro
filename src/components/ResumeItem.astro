---
interface Props {
  item: {
    image: string;
    title: string;
    organization: string;
    date: string;
    summary?: string;
  };
}

const { item } = Astro.props;
---

<article class="flex flex-col gap-2">
  <div class="flex items-start gap-4">
    {
      item.image ? (
        <figure>
          <img
            src={item.image}
            alt=""
            width="48"
            height="48"
            class="rounded-lg"
          />
        </figure>
      ) : (
        <div class="h-12 w-12 shrink-0 animate-pulse rounded-lg bg-neutral-800" />
      )
    }
    <div>
      <h3 class="font-semibold text-neutral-100">{item.title}</h3>
      <p class="text-sm">{item.organization} â€¢ {item.date}</p>
    </div>
  </div>
  {item.summary && <p class="text-sm">{item.summary}</p>}
</article>
