---
import Card from "./Card.astro";
import Chip from "./Chip.astro";

import skills from "@data/skills.json";
---

<Card p="p-6" class="relative">
  <div
    class="flex flex-wrap justify-center gap-2 [mask-image:linear-gradient(90deg,transparent,black_20%,black_80%,transparent)]"
  >
    {skills.map((skill) => <Chip color="chip-primary" label={skill} />)}
  </div>
</Card>
