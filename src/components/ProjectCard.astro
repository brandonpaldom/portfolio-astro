---
import { Image } from "astro:assets";

interface Props {
  project: {
    slug: string;
    coverImage: string;
    name: string;
  };
}

const { project } = Astro.props;
---

<article class="rounded-lg bg-neutral-800 transition-colors duration-300 hover:bg-neutral-700">
  <a href={`/projects/${project.slug}`}>
    <Image src={project.coverImage} alt={project.name} width={800} height={600} class="rounded-t-xl" />
    <div class="rounded-b-xl px-4 py-3">
      <h3 class="truncate">{project.name}</h3>
    </div>
  </a>
</article>
