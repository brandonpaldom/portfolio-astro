---
interface Role {
  title: string;
  modality?: string;
}

const { roles } = Astro.props as { roles: Role[] };
---

<div class="relative flex flex-col gap-4">
  <div class="absolute inset-0 -z-10 mt-6 mb-5 flex w-12 items-center justify-center">
    <span class="absolute h-full w-0.5 bg-neutral-700"></span>
  </div>
  {
    roles.map((role) => (
      <div class="flex flex-col">
        <div class="grid grid-cols-[3rem_1fr] items-center gap-4">
          <div class="flex h-6 items-center justify-center bg-neutral-900">
            <div class="h-3 w-3 rounded-full bg-neutral-700" />
          </div>
          <h3>{role.title}</h3>
        </div>
        <div class="grid grid-cols-[3rem_1fr] items-center gap-4">
          <span class="col-start-2 text-sm">{role.modality}</span>
        </div>
      </div>
    ))
  }
</div>
