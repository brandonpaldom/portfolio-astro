---
import "@styles/global.css";

import Background from "@components/Background.astro";
import Profile from "@components/Profile.astro";
import SkillCarousels from "@components/SkillCarousels.astro";
import Navbar from "@components/Navbar.astro";
import Footer from "@components/Footer.astro";

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  author?: string;
  tags?: string[];
  heroImage?: string;
}

const { title, description, pubDate, author = "Brandon Palmeros", tags = [], heroImage } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(pubDate);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="shortcut icon" href="/favicon.png" type="image/png" />
    <title>{title} | Blog - Brandon Palmeros</title>
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="article" />
    <meta property="article:published_time" content={pubDate.toISOString()} />
    <meta property="article:author" content={author} />
    {heroImage && <meta property="og:image" content={heroImage} />}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <script
      is:inline
      src="https://analytics.ahrefs.com/analytics.js"
      data-key="kJyOJz23V2iAZRK0zOQtTA"
      async></script>
  </head>
  <body
    class="bg-neutral-900 text-neutral-400 antialiased selection:bg-indigo-500 selection:text-white"
  >
    <Background />
    <div
      class="mx-auto flex max-w-[480px] flex-col justify-center gap-4 px-4 pt-6 md:max-w-screen-xl md:flex-row"
    >
      <aside>
        <div class="flex shrink-0 flex-col gap-4 md:sticky md:top-6 md:w-80">
          <Profile />
          <SkillCarousels />
        </div>
      </aside>
      <main class="flex grow flex-col gap-4">
        <Navbar />
        <article class="card flex flex-col p-6">
          {heroImage && (
            <img 
              src={heroImage} 
              alt={title}
              class="mb-6 rounded-lg w-full h-64 object-cover"
            />
          )}
          
          <header class="mb-6">
            <h1 class="heading1 font-bold text-neutral-100 mb-4">{title}</h1>
            
            <div class="flex flex-wrap items-center gap-4 text-sm text-neutral-400 mb-4">
              <time datetime={pubDate.toISOString()}>
                {formattedDate}
              </time>
              <span>â€¢</span>
              <span>Por {author}</span>
            </div>
            
            {tags.length > 0 && (
              <div class="flex flex-wrap gap-2">
                {tags.map((tag) => (
                  <span class="chip chip-secondary">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </header>
          
          <div class="blog-content">
            <slot />
          </div>
        </article>
        <Footer />
      </main>
    </div>
  </body>
</html>