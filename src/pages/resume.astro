---
import Layout from "../layouts/Layout.astro";
import ResumeItem from "../components/ResumeItem.astro";

import resume from "../data/resume.json";
---

<Layout
  title="Currículum | Brandon Palmeros"
  description="Conozca mis habilidades y experiencia profesional en el desarrollo web y el diseño gráfico en mi página de currículum."
>
  <h1>Currículum</h1>
  <article class="flex flex-col gap-4 mt-4">
    <h2>Educación</h2>
    {resume.education.map((item) => <ResumeItem item={item} />)}
  </article>
  <article class="flex flex-col gap-4 mt-4">
    <h2>Experiencia</h2>
    {resume.experience.map((item) => <ResumeItem item={item} />)}
  </article>
  <article class="flex flex-col gap-4 mt-4">
    <h2>Certificaciones</h2>
    {resume.certifications.map((item) => <ResumeItem item={item} />)}
  </article>
</Layout>
